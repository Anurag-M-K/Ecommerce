
<body style="background-color: #e8e8e8;">
    

<div class="container">
    <div class="row">
        <div class="text-danger text-center pt-4 "><h3 class="fw-bold ">WISHLIST</h3></div>
        <div class="d-flex" style="margin-bottom: 10px;width: 80rem;">
            <div class="field" style="width:100%; ">
                <br><br><br>
                <div class="row">
                    <% for(var i=1;i<products.length;i++) { %>
                    <div class="col-sm-2 pr-0">
                        <div class="mb-2" style=" background-color:#eef3f7">
                        <img style="width:11rem ; height:10rem;" src="/images/<%= products[i].products.Pitcure %>" alt="">
                        </div>
                    </div>
                    <div class="col-sm-10 bg-light mb-2">
                        <br>
                        <div class="pl-3">
                            <h5 style="
                            font-weight: bold;"><%= products[i].products.productName %></h5>
                            <br>
                        
                            <div> 
                                <h6>
                                    <span><i class="fa-solid fa-star text-success"></i></span>(154)
                                </h6>
                            </div>
                        
                            <div class="text-danger"><div class="d-flex flex-row-reverse pr-5"><a href="/users/deleteWishlist?id=<%= products[i].products._id %>"><i class="fa-sharp fa-solid fa-trash"></i></a></div>
                         
                                RS:<%= products[i].products.Price %>     
                            </div>
                            <div >
                              <button class="btn btn-danger"onclick="addToCart('<%= products[i]._id %>')" > <i class="fa-sharp fa-solid fa-cart-shopping"></i></button>    
                   
                           </div>
                            
                        </div>
                     
                    </div>
                    <br>
                    <% } %>

                    <hr>
                </div>
                <br><br><br>
            </div>
            

        </div <br><b>
    </div>
</div>


<script>
    	function addToCart(proId) {
				$.ajax({
					url: '/addtocartWishList/' + proId,
					method: 'get',
					success: (response) => {
                        console.log("response :",response);
						if (response.status) {
							let count = $('#cart-count').html()
							count = parseInt(count) + 1
							$("#cart-count").html(count)
						}

					}
				})
			}
</script>




</body>
