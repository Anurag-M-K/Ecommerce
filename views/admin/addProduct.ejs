<main class="main-container">
    <div class="main-title">
        <p class="font-weight-bold">DASHBOARD</p>
    </div>


<section >
    <div class="container">
        <div class="row pb-5">
            <form action="/admin/adminAddNewProduct" method="post" enctype="multipart/form-data">
                <div class="d-flex pe-3">
                    <div class="input-group mb-3 pe-3 w-50">
                        <span class="input-group-text" id="inputGroup-sizing-default">Product Name</span>
                        <input name="productName" type="text"  class="form-control"  required aria-label="Sizing example input"
                            aria-describedby="inputGroup-sizing-default">
                    </div>
                    <div class="input-group mb-3 w-25 ps-3 pe-3">
                        <span class="input-group-text" id="inputGroup-sizing-default">Price</span>
                        <input name="Price" type="number" class="form-control" required   aria-label="Sizing example input"
                            aria-describedby="inputGroup-sizing-default">
                    </div>
                 
                </div>
                
                 <div class="d-flex">
                    <div class="input-group mb-3 w-50 ps-0 pe-3">
                        <span class="input-group-text" id="inputGroup-sizing-default">Category</span>
                        <input type="text" required name="Category">
                        
                    </div>

                    </div> 
                    
                    <div class="input-group mb-3 w-50 ps-0 pe-3">

                        <span class="input-group-text" required id="inputGroup-sizing-default">Brand</span>
                        <input type="text" name="brandName">
                    </div>
                    
                </div>
                <div class="d-flex">
                    <div class="input-group mb-3 pe-3 w-50">
                        <span class="input-group-text" id="inputGroup-sizing-default">Quantity</span>
                        <input  name="Quantity" type="number" class="form-control" required aria-label="Sizing example input"
                            aria-describedby="inputGroup-sizing-default">
                    </div>
                    
            
                </div>

               


            

                <div class="input-group">
                    <input type="file" class="form-control" required  name="productImage" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload" >
                    <button class="btn btn-outline-secondary" type="button" id="inputGroupFileAddon04">Button</button>
                </div>
                <div class="d-felx justify-content-center mt-3">
                    
                        <input type="submit" value="ADD PRODUCT" class="btn btn-success m-2">
                        <input type="reset" value="RESET ITEM" class="btn btn-info m-2 w-25">
                 
                </div>
               
            </form>

        </div>
    </div>
</section>
</section>